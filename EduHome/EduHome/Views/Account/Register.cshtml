@model RegisterVM  

  <!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div style="margin-bottom:15px !important">
                                    <input asp-for="FullName" placeholder="FullName" style="margin-bottom:0px;" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                
                                <div style="margin-bottom:15px !important">
                                    <input asp-for="Username" placeholder="Username" style="margin-bottom:0px;" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div style="margin-bottom:15px !important">
                                    <input asp-for="Email" placeholder="Email" style="margin-bottom:0px;" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div style="margin-bottom:15px !important">
                                    <input asp-for="Password" placeholder="Password" style="margin-bottom:0px;" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div style="margin-bottom:15px !important">
                                    <input asp-for="CheckPassword" placeholder="Password" style="margin-bottom:0px;" />
                                    <span asp-validation-for="CheckPassword" class="text-danger"></span>
                                </div>

                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="IsRemember">
                                        <label for="remember">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->

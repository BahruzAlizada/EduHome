@model List<Blog>

  
    @foreach (Blog blog in Model)
    {
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="single-blog">
                    <div class="blog-img">
                <a asp-controller="Blogs" asp-action="Detail" asp-route-id="@blog.Id"><img src="~/img/blog/@blog.Image" alt="blog"></a>
                        <div class="blog-hover">
                            <a href="blog-details.html"><i class="fa fa-link"></i></a>
                        </div>
                    </div>
                    <div class="blog-content">
                        <div class="blog-top">
                            <p>@blog.By  /  @blog.CreatedTime.ToString("MMMM dd, yyyy")  /  <i class="fa fa-comments-o"></i> 4</p>
                        </div>
                        <div class="blog-bottom">
                    <h2><a asp-controller="Blogs" asp-action="Detail" asp-route-id="@blog.Id">@blog.Title </a></h2>
                    <a asp-controller="Blogs" asp-action="Detail" asp-route-id="@blog.Id">read more</a>
                        </div>
                    </div>
                </div>
            </div>
}

         
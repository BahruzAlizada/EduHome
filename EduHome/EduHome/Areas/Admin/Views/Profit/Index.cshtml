@model List<Profit>
<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            Profit - @ViewBag.TotalProfit$
        </h2>

        <div>
            <a asp-action="Create" class="btn btn-primary rounded-pill text-white" style="margin-right:10px">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>   
                        <th>Cost</th>
                        <th>Description</th>
                        <th>Time</th>
                        <th>By</th>
                        <th style="text-align:right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Profit item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Profitt$</strong>
                            </td>

                           <td>@item.Description</td>
                           <td>@item.CreatedTime</td>
                           <td>@item.By</td>
                            <td>
                                <div style="display:flex;justify-content:flex-end">            
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info rounded-pill text-white" style="margin-right:10px">Update</a>
                                   
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />






